<UserControl x:Class="Silverlight_Sample.MainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel Orientation="Vertical">
        <Button x:Name="btnMessage" Content="Message" Click="btnMessage_Click"  Height="30" Width="220"/>
        <Button x:Name="btnClientError" Content="Make client Exception" Click="btnClientError_Click"  Height="30" Width="220"/>
        <Button x:Name="btnError" Content="Make Service call Exception" Click="btnError_Click"  Height="30" Width="220"/>
        <TextBlock Text="Message:"/>
        <TextBlock x:Name="tblMessage"/>
    </StackPanel>
    
</UserControl>
